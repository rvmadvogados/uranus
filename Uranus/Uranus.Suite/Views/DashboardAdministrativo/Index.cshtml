<div class="row">

    <div class="col-md-5">
        <div class="x_panel tile fixed_height_320">
            <div class="x_title">
                <div class="row">
                    <h2>Solicitações Recessos/Férias</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="row">
                    <h5 class="col-md-5">Nome</h5>
                    <h5 class="col-sm-2">Saldo</h5>
                    <h5 class="col-sm-2">Dias</h5>
                    <h5 class="col-sm-3">Data Inicio</h5>
                    <div class="clearfix"></div>
                </div>
                <div class="clearfix"></div>
            </div>
                <div class="x_content">
                    @{
                        int iRecesso = 1;

                        foreach (var item in Model.DashProfissionaisSolicitacoes)
                        {
                            <div class="widget_summary @(iRecesso % 2 == 0 ? "even" : "odd2")">
                                <div class="col-md-5">
                                    <span>@item.Nome</span>
                                </div>
                                <div class="col-sm-2">
                                    <span>@item.Saldo</span>
                                </div>
                                <div class="col-sm-2">
                                    <span>@item.Dias</span>
                                </div>
                                <div class="col-sm-3">
                                    <span>@item.DataInicio</span>
                                </div>
                                <div class="clearfix"></div>
                            </div>
                            iRecesso++;
                        }
                    }
                </div>
            </div>
    </div>

    <div class="col-md-7">
        <div class="x_panel tile fixed_height_320 overflow_hidden">
            <div class="x_title">
                <div class="row">
                    <h2>Solicitações de Máteriais e Afins</h2>
                    <div class="clearfix"></div>
                </div>
                <div class="row">
                    <h5 class="col-md-4">Nome</h5>
                    <h5 class="col-sm-2">Data</h5>
                    <h5 class="col-sm-6">Solicitação</h5>
