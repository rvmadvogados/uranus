<script>

    var plot1 = $.plot($("#graficoAgendas"), [{
        label: "&nbsp;Liberadas",
        data: @Model.AgendasDisponiveis,
        lines: {
            fillColor: "rgba(150, 202, 89, 0.12)"
        },
        points: {
            fillColor: "#fff"
        },
    },
    {
        label: "&nbsp;Confirmadas",
        data: @Model.AgendasConfirmadas,
        lines: {
            fillColor: "rgba(150, 202, 89, 0.12)"
        },
        points: {
            fillColor: "#fff"
        },
    }], {
        series: {
            curvedLines: {
                apply: true,
                active: true,
                monotonicFit: true
            }
        },
            colors: ["#22B14C", "#E74C3C"],
        grid: {
            borderWidth: {
                top: 0,
                right: 0,
                bottom: 1,
                left: 1
            },
            borderColor: {
                bottom: "#7F8790",
                left: "#7F8790"
            }
        },
        xaxis: {
            tickColor: "rgba(51, 51, 51, 0.06)",
            tickSize: [1, "day"],
            axisLabel: "Date",
            axisLabelUseCanvas: true,
            axisLabelFontSizePixels: 12,
            axisLabelFontFamily: "Verdana, Arial",
            axisLabelPadding: 10,
            mode: "time", timeformat: "%d", minTickSize: [1, "day"]
        },
        yaxis: {
            ticks: 8,
            tickColor: "rgba(51, 51, 51, 0.06)",
        },
        tooltip: false,
        responsive: true
    });


    function gd(year, month, day) {
        return new Date(year, month - 1, day).getTime();
    }

</script>
