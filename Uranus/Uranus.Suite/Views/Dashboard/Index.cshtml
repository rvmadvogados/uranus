<div class="row">

    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="x_panel tile fixed_height_320">
            <div class="x_title">
                <h2>Usuários Conectados</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <h4>Quantidades de Sessões do Usuário Conectado</h4>
                @{
                    int i = 1;

                    foreach (var item in Model.UsuariosLogados)
                    {
                        <div class="widget_summary @(i % 2 == 0 ? "even" : "odd2")">
                            <div class="w_left w_80">
                                <span>@item.Usuario</span>
                            </div>
                            <div class="w_right w_20">
                                <span>@item.Total</span>
                            </div>
                            <div class="clearfix"></div>
                        </div>
                        i++;
                    }
                }
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="x_panel tile fixed_height_320 overflow_hidden">
            <div class="x_title">
                <h2>Sistema Operacional Usado</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table class="" style="width:100%">
                    <tr>
                        <th style="width:37%;">
                            <p>Top 5</p>
                        </th>
                        <th>
                            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                <p class="">Dispositivo</p>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                                <p class="">Progresso</p>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <canvas id="sistemaOperacional" height="140" width="140" style="margin: 15px 10px 10px 0"></canvas>
                        </td>
                        <td>
                            <table class="tile_info">
                                @{
                                    i = 1;

                                    var Color = "blue";

                                    foreach (var item in Model.SistemasOperacionais)
                                    {
                                        if (i == 2)
                                        {
                                            Color = "green";
                                        }
                                        else if (i == 3)
                                        {
                                            Color = "purple";
                                        }
                                        else if (i == 4)
                                        {
                                            Color = "aero";
                                        }
                                        else if (i == 5)
                                        {
                                            Color = "red";
                                        }

                                        <tr>
                                            <td>
                                                <p><i class="fa fa-square @Color"></i>@item.Nome </p>
                                            </td>
                                            <td>@(item.Percentual)%</td>
                                        </tr>

                                        i++;
                                    }
                                }
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

    <div class="col-md-4 col-sm-4 col-xs-12">
        <div class="x_panel tile fixed_height_320 overflow_hidden">
            <div class="x_title">
                <h2>Navegador Usado</h2>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">

                <table class="" style="width:100%">
                    <tr>
                        <th style="width:37%;">
                            <p>Top 5</p>
                        </th>
                        <th>
                            <div class="col-lg-7 col-md-7 col-sm-7 col-xs-7">
                                <p class="">Dispositivo</p>
                            </div>
                            <div class="col-lg-5 col-md-5 col-sm-5 col-xs-5">
                                <p class="">Progresso</p>
                            </div>
                        </th>
                    </tr>
                    <tr>
                        <td>
                            <canvas id="navegador" height="140" width="140" style="margin: 15px 10px 10px 0"></canvas>
                        </td>
                        <td>
                            <table class="tile_info">
                                @{
                                    i = 1;

                                    Color = "blue";

                                    foreach (var item in Model.Navegadores)
                                    {
                                        if (i == 2)
                                        {
                                            Color = "green";
                                        }
                                        else if (i == 3)
                                        {
                                            Color = "purple";
                                        }
                                        else if (i == 4)
                                        {
                                            Color = "aero";
                                        }
                                        else if (i == 5)
                                        {
                                            Color = "red";
                                        }

                                        <tr>
                                            <td>
                                                <p><i class="fa fa-square @Color"></i>@item.Nome </p>
                                            </td>
                                            <td>@(item.Percentual)%</td>
                                        </tr>

                                        i++;
                                    }
                                }
                            </table>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>

</div>

