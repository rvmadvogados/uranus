                                    CPU Utilização
                                </span>
                            </div>
                        </div>
                        <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
                            <div class="left"></div>
                            <div class="">
                                <span class="count_top"><i class="fa fa-tasks"></i> Memória Disponível</span> <span style="font-size: 10px !important;">(MB)</span>
                                <div class="count">@Model.MemoriaDisponivel</div>
                                <span class="count_bottom">
                                    @{
                                        if (decimal.Parse(Model.MemoriaLivre) < decimal.Parse("33,33"))
                                        {
                                            @Html.Raw("<i class='red'>");
                                        }
                                        else if (decimal.Parse(Model.MemoriaLivre) > decimal.Parse("66,66"))
                                        {
                                            @Html.Raw("<i class='green'>");
                                        }
                                        else
                                        {
                                            @Html.Raw("<i class='orange'>");
                                        }
                                    }

                                    @(Model.MemoriaLivre)%
                                    @Html.Raw("</i>")
                                    Memória Livre
                                </span>
                            </div>
                        </div>
                        <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
                            <div class="left"></div>
                            <div class="">
                                <span class="count_top"><i class="fa fa-tasks"></i> Memória Total</span> <span style="font-size: 10px !important;">(MB)</span>
                                <div class="count">@Model.MemoriaTotal</div>
                                <span class="count_bottom">
                                    @{
                                        if (decimal.Parse(Model.MemoriaOcupada) < decimal.Parse("33,33"))
                                        {
                                            @Html.Raw("<i class='green'>");
                                        }
                                        else if (decimal.Parse(Model.MemoriaOcupada) > decimal.Parse("66,66"))
                                        {
                                            @Html.Raw("<i class='red'>");
                                        }
                                        else
                                        {
                                            @Html.Raw("<i class='orange'>");
                                        }
                                    }

                                    @(Model.MemoriaOcupada)%
                                    @Html.Raw("</i>")
                                    Memória Ocupada
                                </span>
                            </div>
                        </div>
                        <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
                            <div class="left"></div>
                            <div class="">
                                <span class="count_top"><i class="fa fa-database"></i> Espaço Disponível</span> <span style="font-size: 10px !important;">(MB)</span>
                                <div class="count">@Model.EspacoDisponivel</div>
                                <span class="count_bottom">
                                    @{
                                        if (decimal.Parse(Model.EspacoLivre) < decimal.Parse("33,33"))
                                        {
                                            @Html.Raw("<i class='red'>");
                                        }
                                        else if (decimal.Parse(Model.EspacoLivre) > decimal.Parse("66,66"))
                                        {
                                            @Html.Raw("<i class='green'>");
                                        }
                                        else
                                        {
                                            @Html.Raw("<i class='orange'>");
                                        }
                                    }

                                    @(Model.EspacoLivre)%
                                    @Html.Raw("</i>")
                                    Espaço Livre
                                </span>
                            </div>
                        </div>
                        <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
                            <div class="left"></div>
                            <div class="">
                                <span class="count_top"><i class="fa fa-database"></i> Espaço Total</span> <span style="font-size: 10px !important;">(MB)</span>
                                <div class="count">@Model.EspacoTotal</div>
                                <span class="count_bottom">
                                    @{
                                        if (decimal.Parse(Model.EspacoOcupada) < decimal.Parse("33,33"))
                                        {
                                            @Html.Raw("<i class='green'>");
                                        }
                                        else if (decimal.Parse(Model.EspacoOcupada) > decimal.Parse("66,66"))
                                        {
                                            @Html.Raw("<i class='red'>");
                                        }
                                        else
                                        {
                                            @Html.Raw("<i class='orange'>");
                                        }
                                    }

