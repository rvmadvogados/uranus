@{
    ViewBag.Title = "Dashboard";
}

<link href="~/Content/CSS/animate.min.css" rel="stylesheet">

<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="dashboard_graph x_panel">
            <div class="row x_title">
                <div class="col-md-6">
                    <h3>Atividades do Servidor</h3>
                </div>
                <div class="col-md-6">
                    <div class="pull-right" style="background: #fff; padding: 5px 10px; border: 1px solid #ccc">
                        <small>@Model.NomeServidor</small>
                    </div>
                </div>
            </div>
            <div class="x_content">
                <div class="demo-container" style="height: 100px">
                    <!-- top tiles -->
                    <div class="row tile_count">
                        <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
                            <div class="left"></div>
                            <div class="">
                                <span class="count_top"><i class="fa fa-users"></i> Usuários Conectados</span>
                                <div class="count">@Model.UsuariosConectados</div>
                                <span class="count_bottom">
                                    @{
                                        if (decimal.Parse(Model.UsuariosAtivos) < decimal.Parse("33,33"))
                                        {
                                            @Html.Raw("<i class='red'>");
                                        }
                                        else if (decimal.Parse(Model.UsuariosAtivos) > decimal.Parse("66,66"))
                                        {
                                            @Html.Raw("<i class='green'>");
                                        }
                                        else
                                        {
                                            @Html.Raw("<i class='orange'>");
                                        }
                                    }

                                    @(Model.UsuariosAtivos)%
                                    @Html.Raw("</i>")
                                    Neste Momento
                                </span>
                            </div>
                        </div>
                        <div class="animated flipInY col-md-2 col-sm-4 col-xs-4 tile_stats_count">
                            <div class="left"></div>
                            <div class="">
                                <span class="count_top"><i class="fa fa-crosshairs"></i> CPU Velocidade</span> <span style="font-size: 10px !important;">(GHz)</span>
