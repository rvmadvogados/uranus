            if (json.codigo == '00') {

                var rows = json.usuarios;

                $('#FiltrarUsuario').html("");
                var select = $('#FiltrarUsuario');
                for (index = 0; index < rows.length; index++) {
                    select.append(
                        $('<option></option>').val(rows[index].Id).html(rows[index].Nome)
                    );
                }

                $('#FiltrarUsuario').val(@Html.Raw(Json.Encode(ViewBag.FiltrarSedes)));
                $('#FiltrarUsuario').trigger('change');

            }
        };
        $.ajax(options);
    }


    
    CarregarProfissao();

    function CarregarProfissao() {

        var dados = new window.FormData();

        var options = {};
        options.url = "/Profissoes/Listar"
        options.type = "POST";
        options.data = dados;
