                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="titlefield">Número do Processo Origem</label>
                                            <select id="FiltrarProcessoOrigem" name="FiltrarProcessoOrigem" class="form-control" style="width: 100% !important; height: 40px !important;"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-group">
                                            <label class="titlefield">Número do Processo Destino</label>
                                            <select id="FiltrarProcessoDestino" name="FiltrarProcessoDestino" class="form-control" style="width: 100% !important; height: 40px !important;"></select>
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="titlefield">Nome do Cliente Destino</label>
                                            <select id="FiltrarClienteDestino" name="FiltrarClienteDestino" class="form-control" style="width: 100% !important; height: 40px !important;"></select>
